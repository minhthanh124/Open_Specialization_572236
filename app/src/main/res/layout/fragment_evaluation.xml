<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluationFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="340dp" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="340dp" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="392dp"
        tools:ignore="MissingConstraints" />

    <com.example.object_keypoint_application.AnnotationOverlayView
        android:id="@+id/keypointOverlayView"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/performanceInfo"
        android:layout_width="204dp"
        android:layout_height="230dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="@string/performanceInfo" />

    <TextView
        android:id="@+id/performanceInfo2"
        android:layout_width="204dp"
        android:layout_height="230dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/performanceInfo"
        android:gravity="left"
        android:textColor="@color/black"
        android:text="@string/performanceInfo" />

    <TextView
        android:id="@+id/keypointEvalTitle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="-411dp"
        android:gravity="center"
        android:textSize="28dp"
        android:textColor="@color/blue"
        android:layout_toStartOf="@id/keypointOverlayView"
        android:text="Keypoints Evaluation" />

    <TextView
        android:id="@+id/delaytimeTitle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="-409dp"
        android:layout_toStartOf="@id/keypointOverlayView"
        android:gravity="center"
        android:textColor="@color/green"
        android:text="Measured Time"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/delaytime"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="-407dp"
        android:layout_toStartOf="@id/keypointOverlayView"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

</RelativeLayout>